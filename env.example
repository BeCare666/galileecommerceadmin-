# ===========================================
# Galilee Commerce Admin - Variables d'environnement
# ===========================================
# Copiez ce fichier en .env.local et remplissez les valeurs.

# --- API (obligatoire) ---
NEXT_PUBLIC_REST_API_ENDPOINT=https://votre-api-backend.com

# --- i18n (obligatoire pour next-i18next) ---
NEXT_PUBLIC_DEFAULT_LANGUAGE=fr
NEXT_PUBLIC_AVAILABLE_LANGUAGES=fr,en,ar

# Multi-langue (optionnel)
NEXT_PUBLIC_ENABLE_MULTI_LANG=true

# --- Auth (optionnel, défaut: authToken) ---
NEXT_PUBLIC_AUTH_TOKEN_KEY=authToken

# --- Front boutique (liens produits / shop) ---
NEXT_PUBLIC_SHOP_URL=https://votre-boutique.com

# --- Pusher / temps réel (optionnel) ---
NEXT_PUBLIC_API_BROADCAST_DRIVER=pusher
NEXT_PUBLIC_PUSHER_ENABLED=false
NEXT_PUBLIC_PUSHER_DEV_MOOD=false
NEXT_PUBLIC_PUSHER_APP_KEY=
NEXT_PUBLIC_PUSHER_APP_CLUSTER=
NEXT_PUBLIC_BROADCAST_AUTH_URL=

# Canaux / événements (optionnel)
NEXT_PUBLIC_MESSAGE_CHANNEL_PRIVATE=
NEXT_PUBLIC_MESSAGE_EVENT=
NEXT_PUBLIC_ORDER_CREATED_CHANNEL_PRIVATE=
NEXT_PUBLIC_ORDER_CREATED_EVENT=
NEXT_PUBLIC_STORE_NOTICE_CREATED_CHANNEL_PRIVATE=
NEXT_PUBLIC_STORE_NOTICE_CREATED_EVENT=

# --- Google Maps (optionnel) ---
NEXT_PUBLIC_GOOGLE_MAP_API_KEY=

# --- Version / debug (optionnel) ---
NEXT_PUBLIC_VERSION=1.0.0

# --- Environnement (optionnel) ---
# APPLICATION_MODE=production
# NODE_ENV=development
